{
    "train_batch_size": "auto", 
    "gradient_accumulation_steps": 4,
    "fp16": {
      "enabled": true,
      "loss_scale": 0,
      "initial_scale_power": 16
    },
    "zero_optimization": {
      "stage": 2,
      "allgather_partitions": true,
      "allgather_bucket_size": 5e8,
      "reduce_scatter": true,
      "reduce_bucket_size": 5e8,
      "overlap_comm": true,
      "contiguous_gradients": true
    },
    "optimizer": {
      "type": "adamw_8bit",
      "params": {
        "lr": "auto",
        "betas": "auto",
        "eps": "auto",
        "weight_decay": "auto"
      }
    },
    "scheduler": {
      "type": "WarmupLR",
      "params": {
        "warmup_min_lr": 0,
        "warmup_max_lr": "auto",
        "warmup_num_steps": "auto"
      }
    },
    "gradient_clipping": 1.0,
    "steps_per_print": 100,
    "wall_clock_breakdown": false
}  